<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Home</h1>
  </div>
  <div class="row">
    <div class="col-md-12 col-12 col-sm-12">
      <div class="card">
        <div class="card-header">
          <h4>Last 20 movies visited</h4>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-striped table-md">
              <tbody>
                <% index = 1 %>
                <% @last_movies.each do |m| %>
                  <tr>
                    <td><img class="mr-3" src="<%= m["Poster"] %>" alt="avatar" width="50"></td>
                    <td><%= m["Title"] %></td>
                    <td><%= m["Country"] %></td>
                    <td><%= m["Year"] %></td>
                    <td>
                      <div class="badge badge-light"><%= m["imdbRating"] %></div>
                    </td>
                    <td><a href="/description?id=<%= m["id_film"] %>" class="btn btn-info">See more</a></td>
                  </tr>
                  <% index += 1 %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
