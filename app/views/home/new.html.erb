<section class="section">
  <div class="margin-top"></div>
  <div class="card new-account">
    <div class="formContent">
      <center>
        <h3>Create new account</h3>
      </center>
      <div class="error-form" >
      <%= @error %>
      </div>
      <div class="register-form">
        <%= form_for @user, url: { action: "create" } do |f| %>
          <div class="form-group input-group">
            <div class="input-group-prepend" style="margin-top: 4px;">
              <span class="input-group-text"> <i class="fa fa-user"></i> </span>
            </div>
            <%= f.text_field :name, placeholder: "Full name", class: "form-control", :required => true %>
          </div>
          <div class="form-group input-group">
            <div class="input-group-prepend" style="margin-top: 4px;">
              <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
            </div>
            <%= f.text_field :email, placeholder: "Email", class: "form-control", :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
          </div>
          <div class="form-group input-group">
            <div class="input-group-prepend" style="margin-top: 4px;">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <%= f.password_field :password, placeholder: "Password", class: "form-control", :required => true %>
          </div>
          <div class="form-group input-group">
            <div class="input-group-prepend" style="margin-top: 4px;">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <%= f.password_field :password_repeat, placeholder: "Repeat password", class: "form-control", :required => true %>
          </div>
          <%= f.submit %>
        <% end %>
      </div>
      <div class="formFooter">
        <a class="underlineHover" href="/">Login into your account</a>
      </div>
    </div>
  </div>
</section>
